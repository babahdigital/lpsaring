# Root public profile for production frontend/container env
# Copy to .env.public.prod before deploy (do not commit real secrets)

APP_ENV=public.prod

# Compose DB vars (used by docker-compose.yml)
DB_NAME=hotspot_db
DB_USER=hotspot_user
DB_PASSWORD=<CHANGE_ME>

# Tunnel token (optional if cloudflared service is enabled)
CLOUDFLARED_TUNNEL_TOKEN=<CHANGE_ME>

# Public links
APP_PUBLIC_BASE_URL=https://your-domain.example
FRONTEND_URL=https://your-domain.example
CORS_ADDITIONAL_ORIGINS=["https://your-domain.example"]
APP_LINK_USER=https://your-domain.example/login
APP_LINK_ADMIN=https://your-domain.example/admin

# Frontend (Nuxt) runtime config
NUXT_PUBLIC_API_BASE_URL=/api
NUXT_PUBLIC_APP_BASE_URL=https://your-domain.example
NUXT_PUBLIC_EXTERNAL_BASE_URL=https://your-domain.example
NUXT_PUBLIC_APP_LINK_USER=https://your-domain.example/login
NUXT_PUBLIC_APP_LINK_ADMIN=https://your-domain.example/admin
NUXT_PUBLIC_HMR_HOST=your-domain.example
NUXT_PUBLIC_HMR_PROTOCOL=wss
NUXT_PUBLIC_HMR_CLIENT_PORT=443
NUXT_PUBLIC_ADMIN_WHATSAPP=+62811580039
NUXT_PUBLIC_WHATSAPP_BASE_URL=https://wa.me
NUXT_INTERNAL_API_BASE_URL=http://backend:5010/api
NUXT_PUBLIC_MIDTRANS_CLIENT_KEY=<MIDTRANS_CLIENT_KEY>
NUXT_PUBLIC_MIDTRANS_ENV=production
NUXT_PUBLIC_MIDTRANS_SNAP_URL_PRODUCTION=https://app.midtrans.com/snap/snap.js
NUXT_PUBLIC_MIDTRANS_SNAP_URL_SANDBOX=https://app.sandbox.midtrans.com/snap/snap.js
NUXT_PUBLIC_CAPTIVE_SUCCESS_REDIRECT_URL=https://google.com
NUXT_PUBLIC_STATUS_PAGE_GUARD_ENABLED=true
NUXT_PUBLIC_BUY_NOW_URL=
NUXT_PUBLIC_DEV_BYPASS_TOKEN=
