# Dev: aktifkan admin routes
ENABLE_ADMIN_ROUTES=True

# Dev-only: auto-init Super Admin (isi sesuai kebutuhan, jangan commit nilai real)
SUPERADMIN_PHONE=
SUPERADMIN_NAME=
SUPERADMIN_PASSWORD=

# Dev-only: OTP bypass (untuk simulasi/E2E; tidak mengirim OTP WhatsApp)
