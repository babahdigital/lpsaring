# frontend/.env.example
# Template variabel environment untuk Frontend (Nuxt.js - Vuexy)
# Salin file ini menjadi .env.local (atau .env) dan isi nilainya.
# ====================================================================

# Base URL API Backend (relative path jika menggunakan proxy Nginx)
NUXT_PUBLIC_API_BASE_URL=/api

# Base URL aplikasi (dipakai untuk runtime config / redirect)
NUXT_PUBLIC_APP_BASE_URL=http://localhost:3010

# Base URL eksternal jika berbeda dari app base URL
NUXT_PUBLIC_EXTERNAL_BASE_URL=http://localhost:3010

# (Opsional) Link navigasi aplikasi
NUXT_PUBLIC_APP_LINK_USER=http://localhost:3010/login
NUXT_PUBLIC_APP_LINK_ADMIN=http://localhost:3010/admin

# HMR via WS (akses lokal melalui Nginx)
NUXT_PUBLIC_HMR_HOST=localhost
NUXT_PUBLIC_HMR_PROTOCOL=ws
NUXT_PUBLIC_HMR_CLIENT_PORT=3010

# Base URL internal untuk server-side/proxy Nuxt (Docker)
NUXT_INTERNAL_API_BASE_URL=http://backend:5010/api

# Host/port Nuxt (server)
NUXT_HOST=0.0.0.0
NUXT_PORT=3010

# Client Key Midtrans (Sandbox) untuk Snap JS di frontend
# Ganti xxxxx dengan Client Key Midtrans Sandbox Anda di file .env
# Client Key Anda: SB-Mid-client-ZRQkWJJFVv-8oZ40
NUXT_PUBLIC_MIDTRANS_CLIENT_KEY=SB-Mid-client-xxxxxxxxxxxxxxxxxxxxxxxx
NUXT_PUBLIC_MIDTRANS_ENV=sandbox

# Nomor WhatsApp admin untuk link bantuan
NUXT_PUBLIC_ADMIN_WHATSAPP=+62811580039

# Base URL WhatsApp untuk membangun link bantuan
NUXT_PUBLIC_WHATSAPP_BASE_URL=https://wa.me

# Redirect setelah captive portal berhasil terhubung
NUXT_PUBLIC_CAPTIVE_SUCCESS_REDIRECT_URL=https://google.com

# URL Snap.js Midtrans (production & sandbox)
NUXT_PUBLIC_MIDTRANS_SNAP_URL_PRODUCTION=https://app.midtrans.com/snap/snap.js
NUXT_PUBLIC_MIDTRANS_SNAP_URL_SANDBOX=https://app.sandbox.midtrans.com/snap/snap.js

# URL tombol Buy Now (opsional, bisa dikosongkan jika tidak dipakai)
NUXT_PUBLIC_BUY_NOW_URL=

# Dev bypass token untuk endpoint /api/users/me/*
NUXT_PUBLIC_DEV_BYPASS_TOKEN=


# Variabel lain yang mungkin dibutuhkan oleh Vuexy atau fitur lain
# Contoh:
# NUXT_PUBLIC_VUEXY_THEME_APP_NAME=Hotspot Portal
# AUTH_ORIGIN=http://localhost:3000 # Jika menggunakan nuxt-auth bawaan Vuexy
# GOOGLE_CLIENT_SECRET=xxx # Jika menggunakan nuxt-auth bawaan Vuexy
# GOOGLE_CLIENT_ID=xxx # Jika menggunakan nuxt-auth bawaan Vuexy