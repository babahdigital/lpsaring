# Root .env ini khusus untuk Docker Compose interpolation (db, path env_file, dll).
# Ini dipakai saat menjalankan dev compose (docker-compose.yml) karena Compose otomatis membaca file `.env` di root.
# Jangan taruh konfigurasi runtime backend/frontend di sini.
# - Frontend dev container: gunakan `frontend/.env.public`
# - Backend dev container: gunakan `backend/.env.public` + `backend/.env.local`

# DB container (docker-compose.yml memetakan DB_* -> POSTGRES_*)
DB_NAME=
DB_USER=
DB_PASSWORD=
 
# Default Compose profiles (optional)
# Example: enable Cloudflare tunnel service automatically
COMPOSE_PROFILES=tunnel

# Cloudflare Tunnel token (dipakai oleh service `cloudflared` di Docker Compose)
CLOUDFLARED_TUNNEL_TOKEN=

# --- Dev-only: Vite HMR behind reverse proxy / Cloudflare Tunnel (optional) ---
# Jika akses via domain https (Cloudflare Tunnel) dan console browser menunjukkan:
#   "[vite] failed to connect to websocket"
# set variabel berikut agar HMR client pakai host/port yang benar.
VITE_HMR_HOST=
VITE_HMR_PROTOCOL=wss
VITE_HMR_CLIENT_PORT=443
VITE_HMR_PORT=
VITE_HMR_PATH=/_nuxt/

